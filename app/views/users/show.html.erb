<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="following_users">
      <%= link_to(followings_user_path(@user)) do %>
        <h4>Following (<%= @user.following_users.count %>)</h4>
      <% end %>
    </section>
    <section class="follower_users">
      <%= link_to(followers_user_path(@user)) do %>
        <h4>Follower (<%= @user.follower_users.count %>)</h4>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>